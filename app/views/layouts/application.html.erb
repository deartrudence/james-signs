<!DOCTYPE html>
<html>
  <head>
    <title>JamesSigns</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <script src="https://use.fontawesome.com/43bdd233ba.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Merriweather" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
  </head>

  <body>
    <p id="notice"><%= notice %></p>
    <p id="alert"><%= alert %></p>
    <div class="wrapper">
      <ul>
        <li class="<%= menu_hl(main_page_path) %>"><%= link_to 'James Signs', main_page_path %></li>
        <li class="<%= menu_hl(portfolio_sections_path)  %> <%= menu_hl(sub_category_path(@sub_category)) if @sub_category.present? %>"><%= link_to 'Portfolio', portfolio_sections_path %></li>
        <li class="<%= menu_hl(services_path) %>"><%= link_to 'Services', services_path %></li>
        <li class="">Learning Center</li>
        <li class="<%= menu_hl(about_path) %>"><%= link_to 'About', about_path %></li>
        <li class="<%= menu_hl(contact_path) %>"><%= link_to 'Contact', contact_path %></li>
        <li class="<%= menu_hl(admin_path) %>"><%= link_to 'Admin', admin_path %></li>
        <li><%= link_to 'logout',destroy_user_session_path , method: :delete %></li>
      </ul>
    </div>
    <%= yield %>

    <footer>
      <div class="wrapper wrapper--flex">
        <div class="col--four">
          <p>james signes</p>
        </div>
        <div class="col--two">
          <div class="info">
            <p class="street-address">10 Scarlett Road Toronto, ON, M6N 4J6</p>
            <p class="hours">Mon - Thursday : 8am - 5pm</p>
            <p class="hours">Friday : 8am - 1pm</p>
          </div>
        </div>
        <div class="col--four phone-number">
          <p><a href="tel:4167674841"><i class="fa fa-phone"></i> 416.767.4841</a></p>
          <p><a href="tel:18774224841"><i class="fa fa-phone"></i> 1.877.422.4841</a></p>
          <p>
            <i class="fa fa-envelope-o"></i>
            <%= mail_to "mailto:info@james-signs.com", "info@james-signs.com", target: "_blank"%>
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>
