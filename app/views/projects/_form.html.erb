<%= form_for(project, html: { multipart: true }) do |f| %>
  <% if project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :sub_category_id %>
    <%= f.collection_select :sub_category_id, SubCategory.all, :id, :title, {:selected => params[:sub_category_id] || project.sub_category_id } %>
  </div>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :item_number %>
    <%= f.text_field :item_number %>
  </div>

  <div class="field">
    <%= f.label :size %>
    <%= f.text_field :size %>
  </div>

  <div class="field">
    <%= f.label :materials %>
    <%= f.text_area :materials %>
  </div>

  <div class="field">
    <%= f.label :recent %>
    <%= f.check_box :recent %>
  </div>

  PICTURES
  <%= f.fields_for :pictures do |picture_form| %>
    <div class="fields">
      <%= picture_form.label :title %>
      <%= picture_form.text_field :title %>
      <%= picture_form.label :image%>
      <%= picture_form.file_field :image %>
      <%= unless picture_form.object.new_record? 
        picture_form.check_box('_destroy') + picture_form.label('_destroy','Remove')
        end
        %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
