<script>
	// Flickity
	var $carousel = $('.recent-carousel').flickity({
	  // options
	  cellAlign: 'left',
	  contain: true
	});


	var flkty = $carousel.data('flickity');

	console.log(flkty)

	$carousel.on( 'select.flickity', function() {
	  // set image caption using img's alt
	  $('.flkty-title').text( flkty.selectedElement.dataset.title )
	  $('.flkty-desc').text( flkty.selectedElement.dataset.desc )
	  $('.flkty-sub-path').text( flkty.selectedElement.dataset.sub_title )
	  $('.flkty-sub-path').attr('href', flkty.selectedElement.dataset.sub_path)
	});

	// Side crumb links
	$('.side-crumbs a').on('click',function(){
    var target = $(this.hash);
    console.log(target)
    target = target.length ? target : $('[name=' + this.hash.slice(1) +']');
    if (target.length) {
      $('html, body').animate({
        scrollTop: target.offset().top
      }, 1000);
      return false;
    }
	});

	// Navigate through recent projects
	$('.js-project-group').first().removeClass('hidden-display').removeClass('hidden-opacity')
	$('.page').first().addClass('selected')

	$('.page').on('click', function(){
		var page = $(this).data('group')
		var group = ".group-" + page
		console.log(group)
		$('.page').removeClass('selected')
		$(this).addClass('selected')
		$('.js-project-group').addClass('hidden-opacity hidden-display')
		$(group).removeClass('hidden-display')
		$(group).removeClass('hidden-opacity')
		// $(group).fadeIn()
	});
</script>